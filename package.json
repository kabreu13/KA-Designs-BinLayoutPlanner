{
  "name": "ka-designs-bin-layout-planner",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=24.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "node -e \"const fs=require('fs');['dist','dist-ssr','coverage','coverage-e2e','test-results','playwright-report','.nyc_output','output'].forEach((p)=>fs.rmSync(p,{recursive:true,force:true}));\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "verify": "npm run lint && npm run typecheck && npm run test:coverage && npm run build",
    "verify:deploy": "npm run lint && npm run typecheck",
    "ci": "npm run verify && npm run test:e2e:smoke",
    "playwright:install": "playwright install --with-deps",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test --grep @smoke --workers=1",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e:coverage": "E2E_COVERAGE=1 playwright test --workers=1"
  },
  "dependencies": {
    "@dnd-kit/core": "6.3.1",
    "@vercel/speed-insights": "1.3.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "jspdf": "4.1.0",
    "lucide-react": "0.522.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-zoom-pan-pinch": "3.7.0"
  },
  "devDependencies": {
    "@playwright/test": "1.58.1",
    "@testing-library/react": "16.3.2",
    "@types/istanbul-lib-coverage": "2.0.6",
    "@types/istanbul-lib-report": "3.0.3",
    "@types/istanbul-reports": "3.0.4",
    "@types/node": "20.19.30",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vitejs/plugin-react": "5.1.3",
    "@vitest/coverage-v8": "4.0.18",
    "autoprefixer": "10.4.24",
    "eslint": "8.57.1",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.26",
    "fast-check": "4.5.3",
    "istanbul-lib-coverage": "3.2.2",
    "istanbul-lib-report": "3.0.1",
    "istanbul-reports": "3.2.0",
    "jsdom": "27.4.0",
    "postcss": "8.5.6",
    "rollup-plugin-visualizer": "5.14.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-istanbul": "7.2.1",
    "vitest": "4.0.18"
  }
}
